<main class="main">
    <div class="content">
        <div class="py-4 px-3 px-md-4">
            <div class="card mb-3 mb-md-4">

                <div class="card-body">
                    <!-- Breadcrumb -->
                    <nav class="d-none d-md-block" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">Admin</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Edit product</li>
                        </ol>
                    </nav>
                    <!-- End Breadcrumb -->

                    <div class="mb-3 mb-md-4 d-flex justify-content-between">
                        <div class="h3 mb-0">Edit Product</div>
                    </div>


                    <!-- Users -->

                    <div class="table-responsive-xl">
                        
                        <table class="table text-nowrap mb-0">
                            <div class="input-group">
                            
                            
                            {{!-- ------------------PORT------------------ --}}

                            <div class="row g-3">
                                <div class="col-sm-7 mt-5"> 
                                    
                                    
                                    <form action="/admin/editProduct/{{id}}" method="post" enctype="multipart/form-data">
                                   
                                    <tr>
                                        <div class="col-sm-7 mb-5">
                                                <label for="img">Select image:</label>
                                                <input type="file" id="img" name="image" accept="image/*" multiple >
                                        </div>
                                    </tr>   
                                    <tr>
                                        <div class="col-sm-7 mb-5">
                                            <label for="">Product Title</label>
                                            <input type="text" value="{{product.title}}" name="title" class="form-control" placeholder="{{this.title}}" aria-label="City">    
                                        </div>  
                                    </tr>
                                    <tr>
                                        <div class="col-sm-7 mb-5">
                                            <label for="">Price</label>
                                            <input type="text" value="{{product.price}}" name="price" class="form-control" placeholder="{{this.price}}" aria-label="City">
                                        </div>
                                    </tr>
                                    <tr>
                                        <div class="col-sm-7 mb-5">
                                            <label for="">% Dicount Price</label>
                                  
                                            <input type="text" value="{{product.discount}}" name="discount" class="form-control" placeholder="{{this.discount}}" aria-label="City">
                                        
                                        </div>
                                    </tr>
                                    <tr>    
                                        <div class="col-sm-7 mb-5">
                                            <label for="">Stock</label>
                                            <input type="text" value="{{product.stock}}" name="stock" class="form-control" placeholder="{{this.title}}" aria-label="City">
                                        </div>
                                    </tr>  
                                    <tr>  
                                        <div class="col-sm-7 mb-5">
                                            <label for="pet-select">Choose an option</label>
                                            
                                            <select name="category" id="pet-select">
                                                <option value="">Category</option>
                                                {{#each dbcat}}
                                                <option value="{{product.category}}">{{this.category}}</option> 
                                                {{/each}}
                                            </select>

                                        </div>
                                   </tr> 
                                   <tr>    
                                        <div class="col-sm-7 mb-5">
                                            <label for="">Discription</label>
                                            <textarea class="form-control" value="{{product.discription}}" name="discription" id="exampleFormControlTextarea1" rows="3"></textarea>
                                        </div> 
                                     
                                        
                                        <div class="col-sm-7 mb-5">
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </div>
                                    </form>
                                </div>
                            
                            </div>
                       </table>
                       
                    </div>
                    <!-- End Users -->
                </div>
            </div>


        </div>

        <!-- Footer -->
        <footer class="small p-3 px-md-4 mt-auto">
            <div class="row justify-content-between">
                <div class="col-lg text-center text-lg-left mb-3 mb-lg-0">
