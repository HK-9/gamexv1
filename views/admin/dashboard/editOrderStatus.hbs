<main class="main">
    <div class="content">
        <div class="py-4 px-3 px-md-4">
            <div class="card mb-3 mb-md-4">
                <div class="card-body bg-light">



            <!-- Blank Start -->
            {{#if placed}}
            
             <div class="col-sm-12 col-xl-6 m-5">
                
                        <div class="h-100 p-4">
                            <h6 class="mb-4">Edit Status</h6>
                            <form action="/admin/editStatusButton/{{orderData._id}}" method="post">
                            <select class="form-select mb-3" name="status" aria-label="Default select example">
                                
                                {{!-- <option value="1">Placed</option> --}}
                                <option value="shipped">Shipped</option>
                                <option value="delivered">Delivered</option>
                            </select>
                          <button type="submit" class="btn btn-danger m-2">Submit</button>
                           </form>
                        </div>
                        
            
             </div>
             
             
             {{/if}}
             {{#if shipped}}
             <div class="col-sm-12 col-xl-6 m-5">
                        <div class=" h-100 p-4">
                            <h6 class="mb-4">Edit Status</h6>
                            <form action="/admin/editStatusButton/{{orderData._id}}" method="post">
                            <select class="form-select mb-3" name="status" aria-label="Default select example">
                                
                                {{!-- <option value="1">Placed</option>
                                <option value="2">Shipped</option> --}}
                                <option value="delivered">Delivered</option> 
                            </select>
                          <button type="submit" class="btn btn-danger mt-5">Submit</button>

                          </form>
                        </div>
             </div>
             {{/if}}
             {{#if delivered}}
             <div class="col-sm-12 col-xl-6 m-5">
                        <div class=" h-100 p-4">
                            <h6 class="mb-4">Edit Status</h6>
                            
                            {{!-- <select class="form-select mb-3" aria-label="Default select example">
                                
                                <option value="1">Placed</option>
                                <option value="2">Shipped</option>
                                <option value="3">Delivered</option>
                            </select> --}}
                          <h6 class="mb-4">Already delivered <i class="bi bi-exclamation-circle-fill mr-4"></i></h6>
                          <a href="/admin/orders"><button type="submit" class="btn btn-danger m-2">Go Back</button></a>
                          
                        </div>
             </div>
             {{/if}}
             {{#if cancelled}}
             <div class="col-sm-12 col-xl-6 m-5">
                        <div class=" rounded h-100 p-4">
                            <h6 class="mb-4">Edit Status</h6>
                            
                            {{!-- <select class="form-select mb-3" aria-label="Default select example">
                                
                                <option value="1">Placed</option>
                                <option value="2">Shipped</option>
                                <option value="3">Delivered</option>
                            </select> --}}
                          <h6 class="mb-4">Already Cancelled</h6>
                          <a href="/admin/orders"><button type="submit" class="btn btn-danger m-2">Go Back</button></a>
                          
                        </div>
             </div>
             {{/if}}
            <!-- Blank End -->


        <!-- Back to Top -->
        </div>
</div>
</div>
</div>


